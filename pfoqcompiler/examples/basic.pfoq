# Basic example of mutually recursive functions

decl f[x](a){  # This function takes an integer parameter
    qcase(a[0]) of {
        0-> call f[x-1](a-[0]);,
        1-> call g(a-[0]);
        }
}
decl g(a){
    if(|a|>1)then{
        call g(a-[0]);
    }else{
        a[0]*=NOT;
    }
}
::
define q;
::
call f[2](q);
