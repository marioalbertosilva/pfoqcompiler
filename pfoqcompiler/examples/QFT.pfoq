decl qft(q){
    q[0] *= H;
    call rot[2](q);
    call qft(q-[0]);
}

decl shift(q){
    if(|q|>1)then{
        SWAP(q[0],q[-1]);
        call shift(q-[0]-[-1]);
    }else{skip;}
}

decl rot[x](q){
    if(|q|>1)then{
        qcase(q[1]) of {
            0->skip;,
            1->q[0] *= Ph[lambda x:pi/(2**x)](x-1);
        }
    call rot[x+1](q-[1]);
    }else{skip;}
}
::
define q;
::
call qft(q);
call shift(q);
